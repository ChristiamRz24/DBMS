---
interface Props {
  label: string;
  options: string[];
}

const { label, options } = Astro.props as Props;
---

<Fragment>
  <p>{label}</p>
  <div class="grid mb-8 grid-cols-2 md:grid-cols-3">
    {
      options.map((option) => (
        <div class="form-control flex items-start">
          <label class="label cursor-pointer">
            <span class="label-text">{option}</span>
            <input type="checkbox" class="toggle ms-3" />
          </label>
        </div>
      ))
    }
  </div>
</Fragment>
