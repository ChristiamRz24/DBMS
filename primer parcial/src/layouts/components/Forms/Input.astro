---
import { type HTMLAttributes } from "astro/types";

interface Props {
  name: string;
  label: string;
  example: string;
  value?: string;
  type: HTMLAttributes<"input">["type"];
}

const { name, label, example, value, type }: Props = Astro.props;
---

<label class="form-control">
  <div class="label">
    <span class="label-text">{label}</span>
  </div>
  <input
    required
    type={type}
    name={name}
    value={value}
    class="input input-bordered w-full focus:outline-none"
  />
  <div class="label">
    <span class="label-text-alt text-sm text-slate-500">
      <span class="font-semibold">Ejemplo:</span>
      {example}
    </span>
  </div>
</label>
